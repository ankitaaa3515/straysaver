<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fourlegged"
    android:layout_height="match_parent"
    android:background="@drawable/carda"
    android:orientation="horizontal"
    tools:context=".fragmenthome">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="!!Love Is A Four Legged World!!"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="-20dp"
            android:gravity="center"
            android:layout_marginTop="50dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="80dp"
                android:layout_height="125dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="75dp">



                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/img6" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="80dp"
                android:layout_height="118dp"
                app:cardCornerRadius="10dp"
                android:background="@color/black"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@id/cardView7">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/img4" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="90dp"
                android:layout_height="125dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="150dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_margin="9dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/img9" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="80dp"
                android:layout_height="118dp"
                android:layout_marginLeft="18dp"
                android:foregroundGravity="center"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="80dp"
                android:layout_toRightOf="@+id/cardView6"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/img7" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="80dp"
                android:layout_height="125dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="60dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/img8" />
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="90dp"
                android:layout_height="125dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="250dp">



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/img11"/>

            </androidx.cardview.widget.CardView>








            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Barry"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Glenn"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="210dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Jasmine"
                android:textSize="20dp"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="160dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramen"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="260dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swansea"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="390dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cherry"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="270dp"/>

        </RelativeLayout>





</RelativeLayout>